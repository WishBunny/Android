<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="dialog_cancel_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_rounded_corner</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="backgroundTint">@color/Pink</item>
    </style>

    <style name="dialog_check_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_rounded_corner</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="backgroundTint">@color/Pink</item>
    </style>

    <style name="BottomNavigationViewNoRipple" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:itemBackground">@android:color/transparent</item>
        <item name="android:colorControlHighlight">@android:color/transparent</item>
    </style>

    <style name="WishbunnyDatePickerDialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/wishbunny_pink</item>
    </style>
</resources>